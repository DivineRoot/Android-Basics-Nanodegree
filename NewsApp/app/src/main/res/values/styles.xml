<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- News header name, author's name & date and time Theme. -->
    <style name="sectionName_authorName_date_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/restTextColor</item>
    </style>

    <!-- News headline Theme. -->
    <style name="newsTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/mainTextColor</item>

    </style>

</resources>