<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.melody">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".GenresActivity"
            android:label="@string/genres"
            android:parentActivityName=".GenresActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GenresActivity" />
        </activity>
        <activity
            android:name=".AlbumsActivity"
            android:label="@string/albums"
            android:parentActivityName=".AlbumsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AlbumsActivity" />
        </activity>
        <activity
            android:name=".ArtistsActivity"
            android:label="@string/artists"
            android:parentActivityName=".ArtistsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ArtistsActivity" />
        </activity>
        <activity
            android:name=".TracksActivity"
            android:label="@string/tracks"
            android:parentActivityName=".TracksActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TracksActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>